generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  firstName    String
  lastName     String
  password     String
  contactEmail String   @unique
  createdAt    DateTime @default(now())
  posts        Post[]
  profile      Profile?
  order        order[]
}

model Profile {
  id           String @id @default(cuid())
  bio          String
  contactPhone Int
  location     String
  lon          Float
  lat          Float
  image        String
  amountEarned Float  @default(0)
  points       Int    @default(0)
  user         User   @relation(fields: [id], references: [id])
}

model Post {
  id          String     @id @default(cuid())
  name        String
  location    String
  lon         Float
  lat         Float
  image       String
  description String
  isClaimed   Boolean @default(false)
  type        POST_TYPES @default(PLASTIC)
  belongsToId String
  createdAt   DateTime   @default(now())
  belongsTo   User       @relation(fields: [belongsToId], references: [id])
}

model order {
  id          String     @id @default(cuid())
  name        String
  location    String
  lon         Float
  lat         Float
  description String
  image       String
  amount_bid  Float
  type        POST_TYPES @default(PLASTIC)
  belongsToId String
  createdAt   DateTime   @default(now())
  quantity    QUANTITY   @default(SMALL)
  belongsTo   User       @relation(fields: [belongsToId], references: [id])
}

model Feedback {
  id        String   @id @default(cuid())
  feedback  String
  createdAt DateTime @default(now())
}

enum POST_TYPES {
  GLASS
  ORGANIC
  PLASTIC
  METAL
  ELECTRONIC
}

enum QUANTITY {
  SMALL
  MEDIUM
  HIGH
}
